<!DOCTYPE html>
<html lang="">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interests</title>

    <link rel="stylesheet" href="res/bootstrap.css">
    <link rel="stylesheet" href="res/animate.css">
    <link rel="stylesheet" href="res/main.css">
    <link rel="stylesheet" href="res/font-awesome-4.7.0/css/font-awesome.min.css">
    <script src="res/jquery.js"></script>
    <script src="res/tether.min.js"></script>
    <script src="res/bootstrap.js"></script>
    <script src="res/masonry.pkgd.min.js"></script>
    <script src="res/imagesloaded.pkgd.min.js"></script>
    <script src="res/jquery.cookie.js"></script>

    <script src="res/angular.js"></script>
    <script src="res/angular-route.js"></script>


    <script src="res/main.js"></script>
</head>

<body>
    <% if(user.name == '###'){ %>
        <%-include sign_navbar %>
            <% } else { %>
                <%-include ok_navbar %>
                    <% } %>

                        <div class="container-fluid" id="container" ng-app='myApp' ng-controller='ctrl' ng-init='loadMyPins()'>

                            <div class="row justify-content-center">
                                <div class="col-10">

                                    <div class="add mt-5 mb-5">
                                        <form class="form-inline">
                                            <input type="text" class="form-control col-8 addimage" placeholder="Enter image URL here">
                                            <button type="button" class="btn btn-outline-primary addBtn col-2">Add</button>
                                        </form>
                                        <div class="preview col-5 mt-5 mb-5">
                                            <img class="img img-responsive img-thumbnail prev" fallback>
                                            <textarea class="form-control" id="description" rows="3" placeholder="Description"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <h3 class="display-5 mt-4 mb-4 text-center">My Pins</h3>



                            <div class="grid mt-4">
                                <div class="grid-sizer"></div>
                                <div ng-repeat='item in myPins' pin>
                                    <div class="grid-item pin">
                                        <div class="description">{{item.description}}</div>
                                        <img class="mainImg img-thumbnail" src="{{item.url}}" ng-click="open(item.url)" fallback>
                                        <div class="love2" ng-mouseover="blur()" ng-mouseleave="bright()"><i class="fa fa-heart red" ng-click="love(item.id)"></i> ({{item.love}})
                                            <div class="trash" ng-click="delete(item.id)"><i class="fa fa-trash"></i></div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>


                        <%-include footer%>

</body>

</html>
